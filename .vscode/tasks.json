{
    "tasks": [{
        "type": "shell",
        "label": "test",
        "command": "g++",
        "args": [
            "-std=c++11",
            "-g",
            "${file}",
            "-o",
            "${workspaceFolder}/index"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },{
        "type": "shell",
        "label": "testoutput",
        "command": "g++",
        "args": [
            "-std=c++11",
            "-g",
            "${file}",
            "./abc/abc.cpp",
            "-o",
            "${workspaceFolder}/index"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    },{
        "type": "shell",
        "label": "compile",
        "command": "g++",
        "args": [
            "-std=c++11",
            "-c",
            "-Wunused-command-line-argument",
            "-g",
            "${file}"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        }
    }],
    "version": "2.0.0"
}